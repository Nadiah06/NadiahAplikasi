<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round">

        <!--        untuk nampung carouselview dan menu selanjutnya-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                app:fillColor="#CDDC39"
                app:pageColor="#000000"
                app:radius="4dp"
                app:slideInterval="3000"
                app:strokeColor="#B86666"
                app:strokeWidth="1dp"></com.synnapps.carouselview.CarouselView>

            <!--            Linear layout untuk buttom peta dan galeri-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <!--                    linear layout untuk image dan text-->
                    <LinearLayout
                        android:id="@+id/button_Maps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimaryDark"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/imagePeta"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="left"
                            android:layout_marginTop="6dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_map_black_24dp" />

                        <TextView
                            android:id="@+id/textPeta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif"
                            android:text="PETA"
                            android:textAllCaps="true"
                            android:textColor="@color/ghostWhite"
                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!--                    Linear untuk buttom galeri-->
                    <LinearLayout
                        android:id="@+id/button_Poto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimaryDark"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/imagePoto"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="left"
                            android:layout_marginTop="6dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_photo_library_black_24dp" />

                        <TextView
                            android:id="@+id/textPoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif"
                            android:text="PHOTOS"
                            android:textAllCaps="true"
                            android:textColor="@color/ghostWhite"
                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--            linear untuk masing-masing buttom -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <!--                    linear layout untuk image dan text-->
                    <LinearLayout
                        android:id="@+id/button_portal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimaryDark"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/imagePortal"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="left"
                            android:layout_marginTop="6dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_map_black_24dp" />

                        <TextView
                            android:id="@+id/textPortal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif"
                            android:text="PORTAL"
                            android:textAllCaps="true"
                            android:textColor="@color/ghostWhite"
                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!--                    Linear untuk -->
                    <LinearLayout
                        android:id="@+id/button_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimaryDark"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/imageVideo"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="left"
                            android:layout_marginTop="6dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_photo_library_black_24dp" />

                        <TextView
                            android:id="@+id/textvideo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif"
                            android:text="VIDEO"
                            android:textAllCaps="true"
                            android:textColor="@color/ghostWhite"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>